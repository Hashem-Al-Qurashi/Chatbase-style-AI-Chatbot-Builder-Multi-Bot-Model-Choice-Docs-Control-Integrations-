[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    venv,
    migrations,
    node_modules,
    .pytest_cache,
    .coverage
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused (allow in __init__.py)
    E501   # line too long (handled by black)
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
    */migrations/*.py:E501,F401